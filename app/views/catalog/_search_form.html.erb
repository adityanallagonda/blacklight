  <div id="desktop-search-bar" class='hidden-phone'>
    <%= form_tag search_action_url, :method => :get, :class => 'navbar-form' do %>
      <span class="search-label"><%= t('blacklight.search.form.q') %></span>
      <% unless search_fields.empty? %>
        <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class=>"search-field") %>
      <% end %>
      <%= text_field_tag :q, params[:q], :class => "q input-xlarge search-query" %>
      <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %> 
      <%= submit_tag t('blacklight.search.form.submit'), :class=>'btn' %>
    <% end %>
  </div>
